class Solution {
    public int longestConsecutive(int[] nums) {
        if(nums==null||nums.length==0)
        return 0;
        Set<Integer> set=new HashSet<>();
        for(int n:nums){
            set.add(n);
        }
        int ans=0;
        int[] arr=new int[set.size()];
        int n=0;
        for(int m:set){
            arr[n++]=m;
        }
        Arrays.sort(arr);
        int cnt=1;
        for(int i=1;i<arr.length;i++){
            if(arr[i]==arr[i-1]+1)
            cnt++;
            else{
                ans=Math.max(ans,cnt);
                cnt=1;
            }
        }
        ans=Math.max(ans,cnt);

        return ans;
    }
}
